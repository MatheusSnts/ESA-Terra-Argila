@model ESA_Terra_Argila.Models.Order
@{
    ViewData["Title"] = "Carrinho de compras";
}
<style>
    .cart-image {
        width: 5rem;
        height: 5rem;
    }
</style>

<div class="container">
    <div class="col-md-12 my-3">
        <h2>Carrinho de compras</h2>
    </div>
    <div class="d-flex gap-4">
        <div style="min-height: 25rem;" class="col-md-7">
            @foreach (OrderItem item in Model.OrderItems)
            {
                string category = item.Product.Category?.Name ?? "Sem categoria";
                <div class="col-md-12 d-flex border-bottom pb-2 justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                        <div class="cart-image">
                            <img src="~/images/logo.png" alt="Item">
                        </div>
                        <div>
                            <p class="fw-bold mb-0">@item.Product.Name</p>
                            <p class="mb-0">@category</p>
                        </div>
                    </div>
                    <div class="d-flex gap-2 align-items-center">
                        <svg class="cursor-pointer" xmlns="http://www.w3.org/2000/svg" fill="none" width="30" height="30" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
                        </svg>
                        <span style="font-size: 16px;" class="stock-badge fw-bold rounded">@item.Quantity</span>
                        <svg class="cursor-pointer" xmlns="http://www.w3.org/2000/svg" fill="none" width="30" height="30" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                        </svg>
                    </div>
                    <div class="d-flex align-items-center">
                        <div style="font-size: 20px;" class="fw-bold mb-0">@item.GetTotal().ToString("C", new System.Globalization.CultureInfo("pt-PT"))</div>
                    </div>
                    <div class="d-flex align-self-start">
                        <a class="text-secondary" asp-action="DeleteItem" asp-route-id="@item.Id" onclick="return confirm('Tem a certeza que deseja remover este item do carrinho?');">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                            </svg>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4 form-section">
        </div>
    </div>
</div>




@model ESA_Terra_Argila.Models.StockMovement

@{
    ViewData["Title"] = "Gestão de Stock";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Gerir Stock</h2>

<form asp-controller="Materials" asp-action="CreateStockMovement" method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" asp-for="MaterialId" />
    <div class="col-md-4 form-section pt-2 pb-4 px-4">
        <div class="form-group">

            <div>
                <label for="Quantity">Quantidade</label>
                <input type="number" class="form-control" asp-for="Quantity" required min="0" />
            </div>
        </div>

        <div class="form-group">
            <div class="mt-3">
                <label for="Type">Tipo de Movimento</label>
                <select class="form-control" asp-for="Type" required>
                    <option value="Entrada">Entrada</option>
                    <option value="Saída">Saída</option>
                </select>
            </div>

        </div>
        <div class="mt-3">
            <button type="submit" class="add-button">Confirmar</button>
            <button asp-action="Index" class="cancel-button">Cancelar</button>
        </div>

    </div>
</form>
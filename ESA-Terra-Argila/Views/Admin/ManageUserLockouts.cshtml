@model IEnumerable<ESA_Terra_Argila.Models.User>
@inject UserManager<User> UserManager
@{
    ViewData["Title"] = "Gerenciamento de Bloqueio de Usuários";
}

<div class="container mt-4">
    <h1>Gerenciamento de Bloqueio de Usuários</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="card">
        <div class="card-header">
            <h4>Lista de Usuários</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nome de Usuário</th>
                            <th>Email</th>
                            <th>Nome Completo</th>
                            <th>Função</th>
                            <th>Estado de Bloqueio</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var roles = await UserManager.GetRolesAsync(user);
                            var role = roles.FirstOrDefault() ?? "Sem Função";
                            
                            string roleBadgeClass = "secondary";
                            if (role == "Admin") roleBadgeClass = "danger";
                            else if (role == "Vendor") roleBadgeClass = "primary";
                            else if (role == "Supplier") roleBadgeClass = "success";
                            else if (role == "Customer") roleBadgeClass = "info";
                            
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.FullName</td>
                                <td>
                                    <span class="badge bg-@roleBadgeClass">@role</span>
                                </td>
                                <td>
                                    @if (user.LockoutEnabled && user.LockoutEnd.HasValue && user.LockoutEnd.Value > DateTimeOffset.UtcNow)
                                    {
                                        <span class="badge bg-danger">Bloqueado até @user.LockoutEnd.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                </td>
                                <td>
                                    @if (user.LockoutEnabled && user.LockoutEnd.HasValue && user.LockoutEnd.Value > DateTimeOffset.UtcNow)
                                    {
                                        <form asp-action="UnlockUser" method="post" style="display: inline;">
                                            <input type="hidden" name="userId" value="@user.Id" />
                                            <button type="submit" class="btn btn-success btn-sm">Desbloquear</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#lockUserModal-@user.Id">
                                            Bloquear
                                        </button>
                                        
                                        <!-- Modal para bloquear usuário -->
                                        <div class="modal fade" id="lockUserModal-@user.Id" tabindex="-1" aria-labelledby="lockUserModalLabel-@user.Id" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="lockUserModalLabel-@user.Id">Bloquear Usuário: @user.UserName</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <form asp-action="LockUser" method="post">
                                                        <div class="modal-body">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <div class="mb-3">
                                                                <label for="lockoutMinutes-@user.Id" class="form-label">Duração do bloqueio (minutos):</label>
                                                                <input type="number" class="form-control" id="lockoutMinutes-@user.Id" name="lockoutMinutes" value="5" min="1" max="1440" />
                                                                <small class="text-muted">Máximo: 24 horas (1440 minutos)</small>
                                                            </div>
                                                            <p>Confirma o bloqueio da conta de @user.FullName (@user.Email)?</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                            <button type="submit" class="btn btn-danger">Bloquear</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 
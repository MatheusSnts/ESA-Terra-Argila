@using ESA_Terra_Argila.Helpers          // Importa os helpers do projeto
@model IEnumerable<ESA_Terra_Argila.ViewModels.UserViewModel>    // Define que o modelo é uma coleção de UserViewModel
@{
    ViewData["Title"] = "Utilizadores";   // Define o título da página
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";   // Define o layout compartilhado
}

<div class="col-md-12 d-flex align-items-center mt-3 gap-5">
    <!-- Container para o cabeçalho -->
    <h2>Utilizadores</h2>                <!-- Exibe o título da página -->
</div>

<table id="datatable" class="display">
    <!-- Inicia a tabela de usuários -->
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FullName)</th>   // Cabeçalho: Nome Completo
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>        // Cabeçalho: Email
            <th>@Html.DisplayNameFor(model => model.First().Role)</th>         // Cabeçalho: Role
            <th>Bloqueado?</th>                                               // Cabeçalho: Status de bloqueio
            <th>Opções</th>                                                   // Cabeçalho: Ações disponíveis
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)         // Itera sobre cada usuário do modelo
        {
            <tr>
                <td>@user.FullName</td>      // Exibe o nome completo do usuário
                <td>@user.Email</td>         // Exibe o email do usuário
                <td>@user.Role</td>          // Exibe a role do usuário
                <td>
                    @if (user.IsLocked)      // Verifica se o usuário está bloqueado
                    {
                        <span class="text-danger">Sim</span>
                        // Exibe "Sim" em vermelho se estiver bloqueado
                    }
                    else
                    {
                        <span class="text-success">Não</span>
                        // Exibe "Não" em verde se não estiver bloqueado
                    }
                </td>
                <td>
                    <form asp-action="AcceptUser" method="post" class="d-inline rounded-1">
                        // Formulário para aprovar o usuário
                        @Html.AntiForgeryToken()   // Gera o token anti-CSRF
                        <input type="hidden" name="id" value="@user.Id" />   // Campo oculto com o ID do usuário
                        <button type="submit" class="text-success text-decoration-none" title="Aprovar utilizador">
                            // Botão de aprovação
                            <svg class="action-icon" xmlns="http://www.w3.org/2000/svg" fill="none"
                                 viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                // Ícone SVG para aprovação
                                <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />   // Desenha o ícone
                            </svg>
                        </button>
                    </form>   // Fim do formulário de aprovação
                    <form asp-action="Delete" method="post" class="d-inline">
                        // Formulário para remover o usuário
                        @Html.AntiForgeryToken()   // Gera o token anti-CSRF
                        <input type="hidden" name="id" value="@user.Id" />   // Campo oculto com o ID do usuário
                        <button type="submit" class="text-danger text-decoration-none" title="Remover utilizador"
                                onclick="return confirm('Tem a certeza que deseja reprovar este cadastro?');">
                            // Botão de remoção com confirmação
                            <svg class="action-icon" xmlns="http://www.w3.org/2000/svg" fill="none"
                                 viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                // Ícone SVG para remoção
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />   // Desenha o ícone
                            </svg>
                        </button>
                    </form>   // Fim do formulário de remoção
                </td>
            </tr>
            // Fim da linha para o usuário
        }
    </tbody>
</table>   // Fim da tabela





<main class="mt-5">
    <h1 class="form-title">@ViewData["Title"]</h1>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.OldPassword" class="form-label">Palavra-passe antiga</label>
            <input asp-for="Input.OldPassword" class="form-input" autocomplete="current-password" aria-required="true" placeholder="Insira a palavra-passe antiga" />
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>

        </div>


        <div class="form-group">
            <label asp-for="Input.NewPassword" class="form-label">Palavra-passe nova</label>
            <input asp-for="Input.NewPassword" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Insira a palavra-passe nova" />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="form-label">Palavra-passe nova</label>
            <input asp-for="Input.ConfirmPassword" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Insira a palavra-passe nova" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>



        <button id="update-profile-button" type="submit" class="action-button">Alterar palavra-passe</button>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
